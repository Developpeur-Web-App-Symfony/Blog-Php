{% extends "gabarit.html.twig" %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ style ~ 'mobile.css' }}">
    <link rel="stylesheet" href="{{ style ~ 'tablet.css' }}" media="{{ mediaTablet }}">
    <link rel="stylesheet" href="{{ style ~ 'desktop.css' }}" media="{{ mediaDesktop }}">
{% endblock %}
{% block title %}{{ "Mot de passe utilisateur" }}{% endblock %}

{% block main %}
    <div>
        <section class="banner">
            <h1>{{ user.username }}</h1>
        </section>
        <section class="user">
            <form class="user-form" method="post">
                <div class="img-form-user">
                    <img src="/media/icons-utilisateur.png" alt="logo">
                </div>
                <label for="password">
                    <i class="fa fa-lock"></i>
                    <input name="password" type="password" placeholder="Nouveau mot de passe">
                </label>
                {% if validator.errorsMsg.password is defined %}
                    <p class="text-danger">{{ validator.errorsMsg.password }}</p>
                {% endif %}
                <label for="cPassword">
                    <i class="fa fa-lock"></i>
                    <input name="cPassword" type="password"
                           placeholder="Confirmez le nouveau mot de passe">
                </label>
                <div>
                    <input type="hidden" name="userForm" value="update">
                    <input class="btn-form" type="submit" id="submit" value="Mettre Ã  jour le mot de passe">
                </div>
            </form>
        </section>
    </div>
{% endblock %}


